.row
    .col-md-12
        h2 {{ model.entity.name }}
.row
    .col-md-4
        .panel.panel-info
            .panel-heading Properties
            .panel-body
                form.form-horizontal(role="form")
                    .form-group
                        label.col-sm-3.control-label Single
                        .col-sm-9
                            input.form-control(type="text", ng-model="model.entity.name")
                    .form-group
                        label.col-sm-3.control-label Plural
                        .col-sm-9
                            input.form-control(type="text", ng-model="model.entity.plural")
                    .form-group
                        .col-sm-9.col-sm-offset-3.text-right
                            button.btn.btn-primary(type="submit") Save

    .col-md-6
       h3 Screens
       table.table
           thead
               th Name
           tbody
               tr(ng-repeat="screen in model.entity.screens")
                   td {{ screen.name }}